{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types", "./types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*/__tests__/**/*"
  ]  
}
